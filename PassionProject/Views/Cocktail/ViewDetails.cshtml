@model PassionProject.Models.ViewModels.DetailsCocktail

@{
    ViewBag.Title = "View";
}

    <p>
        <a href="/Cocktail/List">Go back to list</a>
        <br />
        <a href="/Cocktail/Edit/@Model.SelectedCocktail.drinkId">Update</a>
        <br />
        <a href="/Cocktail/DeleteConfirm/@Model.SelectedCocktail.drinkId">Delete</a>
        <h2>@Model.SelectedCocktail.drinkName</h2>
        <div>Cocktail Type: @Model.SelectedCocktail.drinkType</div>
        <div>Created By: @Model.SelectedCocktail.bartenderId </div>
        <div>Alcoholic Ingredients: @Model.SelectedCocktail.liqIn</div>
        <div>Mix Ingredients: @Model.SelectedCocktail.mixIn</div>
        <div>Recipe: @Model.SelectedCocktail.drinkRecipe</div>
        <div>Created: @Model.SelectedCocktail.datePosted</div>
    </p>
