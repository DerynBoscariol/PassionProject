@model IEnumerable<PassionProject.Models.BartenderDto>
@{
    ViewBag.Title = "Create";
}

        <h2>Add a Cocktail</h2>
        <form action="/Cocktail/Create" method="POST">
            <div>
                <label>Cocktail Name:</label> <input type="text" name="drinkName" />
            </div>
            <div>
                <label>Cocktail Type:</label> <input type="text" name="drinkType" />
            </div>
            <div>
                <label>Recipe:</label> <input type="text" name="drinkRecipe" />
            </div>
            <div>
                <label>Alcoholic Ingredients:</label> <input type="text" name="liqIn" />
            </div>
            <div>
                <label>Mix Ingredients:</label> <input type="text" name="mixIn" />
            </div>
            <div>
                <label>Date Created:</label> <input type="text" name="datePosted" />
            </div>
            <div>
                <label>Select Bartender</label>

            </div>
            <div>
                <input type="submit" value="Add Cocktail" />
            </div>
        </form>
    