@model PassionProject.Models.BartenderDto
@{
    ViewBag.Title = "DeleteConfirm";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete Confirm</title>
</head>
<body>
    <div>
        <h2>Are you sure you want to delete this Bartender?</h2>
        <a href="/Bartender/List">Cancel</a>
        <h3>Name: @Model.FirstName @Model.LastName</h3>
        <form action="/Bartender/Delete/@Model.BartenderId" method="POST">
            <input type="submit" value="Confirm Delete" />
        </form>
    </div>
</body>
</html>
