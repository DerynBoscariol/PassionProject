@model PassionProject.Models.ViewModels.UpdateBartender
@{
    ViewBag.Title = "Eit";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit Bartender</title>
</head>
<body>
    <div>
        <h2>Update Bartender</h2>
        <form action="/Bartender/Update/@Model.SelectedBartender.bartenderId" method="POST">
            <div style="display:none;">
                <input type="text" name="bartenderId" value="@Model.SelectedBartender.bartenderId" />
            </div>
            <div>
                <label>First Name:</label> <input type="text" name="firstName" />
            </div>
            <div>
                <label>Last Name:</label> <input type="text" name="lastName" />
            </div>
            <div>
                <label>Email:</label> <input type="email" name="email" />
            </div>
            <div>
                <label>Cocktails:</label>

                <select name="drinkId">
                    @foreach (var drink in Model.CocktailsOptions)
                    {
                        <option value="@drink.drinkId">@drink.drinkName</option>

                    }
                </select>
            </div>
            <div>
                <input type="submit" value="Update Bartender" />

            </div>
        </form>
    </div>
</body>
</html>
